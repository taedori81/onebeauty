{% macro link_list(link_infos) %}
    <ul>
    {% for link_info in link_infos %}
        <li>
            <a href="{{ link_info.url }}">{{ link_info.text or link_info.url }}</a>
        </li>
    {% endfor %}
    </ul>
{% endmacro %}

{% macro cms_column() %}
    {{ link_list(xtheme.get_cms_footer_links()) }}
{% endmacro %}

{% macro html_column() %}
    {{ xtheme.get("footer_html")|default("", True)|safe }}
{% endmacro %}

{% macro links_column() %}
    {{ link_list(xtheme.get_footer_links()) }}
{% endmacro %}

<footer>
    {% set col_order = xtheme.get("footer_column_order", "").split(",") %}
    {% set col_width = (12 / col_order|length)|int %}
    {% set col_macros = {"cms": cms_column, "html": html_column, "links": links_column} %}
    <div class="container">
        {% if col_order.length %}
        <hr>
        {% endif %}
        <div class="row">
            {% for col in col_order %}
                <div class="col-md-{{ col_width }}">
                    {% set col_macro = col_macros.get(col) %}
                    {% if col_macro %}{{ col_macro() }}{% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
    <div id="footer-inner">
        <div class="container">
            <div class="row">
                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        <div class="corporate-widget">
                            <span class="footer-logo">One Beauty</span><!-- End .footer-logo -->
                            <p>We are a creative company, who works with passion and love. We provide the best services you need. We help you to get better...</p>

                        </div><!-- End corporate-widget -->
                    </div><!-- End .widget -->
                </div><!-- End .col-md-3 -->
                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        {% include "shoop/front/includes/_category_menu.jinja" %}
                    </div><!-- End .widget -->
                </div><!-- End .col-md-3 -->

                <div class="clearfix visible-sm"></div><!-- End .clearfix -->

                <div class="col-md-3 col-sm-6">
                    <div class="widget">

                    </div><!-- End .tagcloud -->
                </div><!-- End .col-md-3 -->

                <div class="col-md-3 col-sm-6">
                    <div class="widget">
                        <h4>Partner Manufacture</h4>
                        <ul class="flickr-widget flickr-widget-two clearfix"></ul>
                    </div><!-- End .widget -->
                    <div class="widget">
                        <h4>Newsletter</h4>
                        <div class="newsletter-widget">
                            <p>Join our newsletter and follow the latest trends of beauty.</p>
                            <form action="#" id="newsletter-widget-form">
                                <input type="email" class="form-control " placeholder="Join our newsletter..." required>
                                <button type="submit" title="Join Now!" class="btn btn-custom "><i class="fa fa-envelope"></i></button>
                            </form>
                        </div><!-- End .newsletter-widget -->
                    </div><!-- End .widget -->
                </div><!-- End .col-md-3 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End #footer-inner -->
    <div id="footer-bottom">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-push-6">
                    <ul class="footer-menu">
                        <li><a href="aboutus.html">About Us</a></li>
                        <li><a href="#">Search</a></li>
                        <li><a href="faqs.html">Faqs</a></li>
                        <li><a href="knowledge.html">Knowledge</a></li>
                        <li><a href="contact.html">Contact Us</a></li>
                    </ul>
                </div><!-- End .col-md-6 -->
                <div class="col-md-6 col-md-pull-6">
                    <p class="copyright">Designed and Developed by Evo.  All rights reserved. &copy; <a href="http://www.byevo.com">www.byevo.com</a></p>
                </div><!-- End .col-md-6 -->
            </div><!-- End .row -->
        </div><!-- End .container -->
    </div><!-- End #footer-bottom -->
</footer>
