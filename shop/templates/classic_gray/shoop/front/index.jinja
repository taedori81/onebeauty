{% extends "shoop/front/layout_2_col.jinja" %}

{% block title %}{% trans %}Home{% endtrans %}{% endblock %}
{% block content_title %}{% endblock %}

{% block content_wrapper %}

    <div id="content" role="main">
        {% if xtheme.get("show_welcome_text", True) %}
            <h1 class="page-header">{% trans %}Welcome to {% endtrans %}{{ request.shop.public_name }}!</h1>
        {% endif %}

        <div id="revslider-container">
            <div id="revslider">
                <ul>
                    <li data-transition="slideleft" data-slotamount="8" data-masterspeed="800" data-title="All you need" data-thumb="{{ static("images/revslider/black-hair.jpg") }}">
                        <!-- background image -->
                        <img src="{{ static("images/revslider/black-hair.jpg") }}"  alt="slidebg1" data-lazyload="{{ static("images/revslider/black-hair.jpg") }}" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat">

                        <div class="tp-caption rev-subtitle lfb ltt"
                            data-x="0"
                            data-y="160"
                            data-speed="1000"
                            data-start="900"
                            data-easing="Power3.easeInOut"
                            data-endspeed="400"
                            style="z-index: 10">{% trans %}All you need for your beauty{% endtrans %}
                        </div>

                        <div class="tp-caption rev-title lfb ltt"
                            data-x="0"
                            data-y="210"
                            data-speed="1000"
                            data-start="1000"
                            data-easing="Power3.easeInOut"
                            data-endspeed="600"
                            style="z-index: 6">Well &amp; Clean Coded
                        </div>


                        <div class="tp-caption rev-text lfb ltt"
                            data-x="0"
                            data-y="280"
                            data-speed ="1000"
                            data-start="1200"
                            data-easing="Power3.easeInOut"
                            data-endspeed="700"
                            style="z-index: 12">Qui laborum saepe vel facilis unde quis odit maiores corrupti, expedita est repellendus auses.
                        </div>

                        <div class="tp-caption rev-btn lfb ltt"
                            data-x="0"
                            data-y="350"
                            data-speed="1000"
                            data-start="1400"
                            data-easing="Power3.easeInOut"
                            data-endspeed="800"
                            style="z-index: 14">
{#                                <a href="{{ url('catalogue:index') }}" class="btn btn-white no-radius min-width">{% trans %}Purchase Now!{% endtrans %}</a>#}
                        </div>
                    </li>
                    <li data-transition="slideleft" data-slotamount="8" data-masterspeed="800" data-title="New and Cool" data-thumb="{{ static("images/revslider/black-hair2.jpg") }}">
                        <!-- background image -->
                        <img src="{{ static("images/revslider/black-hair2.jpg") }}"  alt="slidebg1" data-lazyload="{{ static("images/revslider/black-hair2.jpg") }}" data-bgposition="center center" data-bgfit="cover" data-bgrepeat="no-repeat">

                        <div class="tp-caption rev-subtitle lfb ltt"
                            data-x="center"
                            data-y="160"
                            data-speed="1000"
                            data-start="900"
                            data-easing="Power3.easeInOut"
                            data-endspeed="400"
                            style="z-index: 10">To make your job easier
                        </div>

                        <div class="tp-caption rev-title lfb ltt"
                            data-x="center"
                            data-y="210"
                            data-speed="1000"
                            data-start="1000"
                            data-easing="Power3.easeInOut"
                            data-endspeed="600"
                            style="z-index: 6">New &amp; Unique &amp; Cool
                        </div>


                        <div class="tp-caption rev-text text-center lfb ltt"
                            data-x="center"
                            data-y="280"
                            data-speed ="1000"
                            data-start="1200"
                            data-easing="Power3.easeInOut"
                            data-endspeed="700"
                            style="z-index: 12">Lorem ipsum dolor sit amet, consectetur adipisicing elit. Dolorum totam sunt expedita laborum.
                        </div>

                        <div class="tp-caption rev-btn lfb ltt"
                            data-x="center"
                            data-y="350"
                            data-speed="1000"
                            data-start="1400"
                            data-easing="Power3.easeInOut"
                            data-endspeed="800"
                            style="z-index: 14">
{#                                <a href="{{  url('catalogue:index') }}" class="btn btn-white no-radius min-width">{% trans %}Purchase Now!{% endtrans %}</a>#}
                        </div>
                    </li>
                </ul>
            </div><!-- End #revslider -->
        </div><!-- End #revslider-container -->

        <div class="mb80"></div><!-- space -->


        {% placeholder "front_content" %}
            {% row %}
                {% plugin "classic_gray.product_highlight" %}
                    type = "newest"
                    title = "Newest Products"
                {% endplugin %}
            {% endrow %}
            {% row %}
                {% plugin "classic_gray.product_highlight" %}type = "best_selling"{% endplugin %}
            {% endrow %}
        {% endplaceholder %}
    </div>

{% endblock %}

{% block onbodyload %}
    "use strict";
            // Slider Revolution
            jQuery('#revslider').revolution({
                delay:8000,
                startwidth:1170,
                startheight:520,
                fullWidth:"on",
                hideTimerBar: "on",
                spinner:"spinner2",
                navigationStyle: "preview4",
                soloArrowLeftHOffset:0,
                soloArrowRightHOffset:0
            });
{% endblock %}