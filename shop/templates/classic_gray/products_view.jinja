{% extends "shoop/front/product/category.jinja" %}

{% block title %}{% trans %}Newest products{% endtrans %}{% endblock %}
{% block content_title %}{% trans %}Newest products{% endtrans %}{% endblock %}


{% block page_header_title %}
<h1>{% trans %}Newest Products{% endtrans %}</h1>
<p class="page-header-desc">{% trans %}{% endtrans %}</p>
{% endblock %}

{% block page_header_breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="/">{% trans %}Home{% endtrans %}</a></li>
        <li class="active">{% trans %}Newest products{% endtrans %}</li>
    </ol>
{% endblock %}

{% block ajax_content %}
    <div class="row masonry-grid-fitrows filter-grid sort-grid">

        {% for product in shoop.general.get_newest_products(n_products=9) if shoop.product.is_visible(product) %}
             <div class="col-xs-6 col-sm-4 col-md-3 col-lg-3 masonry-grid-item product-item">
                {{ macros.product_box(product, show_image=True, show_description=True, class="product-item") }}
            </div>
        {% endfor %}

    </div>

{% endblock %}
